{% block javascripts %}
	<script>

	    $(document).ready(function(){
      $('.slider').slider({full_width: true});
    });
        
		    $(document).ready(function(){
		      $('.parallax').parallax();
		    });


    var options = [  
    {selector: '#tips', 
    offset: 200, 
    callback: 'Materialize.showStaggeredList("#tips")' } 
    ]; 
     Materialize.scrollFire(options); 

     $(document).ready(function(){
    $('.tabs-wrapper .row').pushpin({ top: $('.tabs-wrapper').offset().top });
  });

        
 	</script>     
{% endblock %}
